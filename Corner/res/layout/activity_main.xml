<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:textAlignment="center"
    tools:context=".MainActivity" >
 
    	<Spinner
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.00"
        android:prompt="@string/select_kid_prompt" />
	 
    <Button
        android:id="@+id/btnStartStop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|fill_horizontal"
        android:layout_weight="0.00"
        android:onClick="startStopTimer"
        android:text="@string/button_start_stop" />

    <TextView
        android:id="@+id/tbTimeRemaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center_vertical|center_horizontal"
        android:selectAllOnFocus="true"
        android:text="@string/timer_start_value"
        android:textAlignment="center"
        android:textSize="100sp"
        android:textStyle="normal"
        android:typeface="monospace" >

        <requestFocus />
    </TextView>

    <Button
        android:id="@+id/btnAddTestData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.00"
        android:onClick="addTestData"
        android:text="Add Test Data" />

    <Button
        android:id="@+id/btnClearConfig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.00"
        android:onClick="clearTestData"
        android:text="Clear Config" />

</LinearLayout>